{
  "name": "gitlab-confetti",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:ext": "turbo dev --filter ./apps/extension",
    "dev:web": "turbo dev --filter ./apps/web",
    "build:ext": "turbo build --filter ./apps/extension --force",
    "build:web": "turbo build --filter ./apps/extension --force"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
